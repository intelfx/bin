#!/bin/bash

set -eo pipefail
shopt -s lastpipe

: "${TMP_ROOT="$(systemd-path user-state-cache)/clangd-projects"}"
# shellcheck source=../inc/-mktempdir-main
. -- -mktempdir-main


#
# main
#

setup_tmpdir "." "$TMP_ROOT"
process_one_dir --no-subdir ".cache/clangd"

shopt -s nullglob
for file in */compile_commands.json; do
	process_one_dir --no-subdir "${file%/*}/.cache/clangd"
done
