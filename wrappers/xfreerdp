#!/bin/bash -e

OPTIONS=(
	/size:2560x1440
	/dynamic-resolution
	/scale:140
	/sound:sys:pulse
	/floatbar:show:fullscreen
	/auto-reconnect
)

OPTIONS_BEST=(
	+aero
	# TODO: investigate effects of these options
	/network:auto
	/rfx
	/gfx:avc444
)

OPTIONS_FASTEST=(
	-aero
	-themes
	-wallpaper
	/bpp:8
	+compression
	/compression-level:2
	# TODO: investigate effects of these options
	/network:modem
	/rfx
	/gfx:avc444

	# TODO: pick the best codec
	# see https://github.com/FreeRDP/FreeRDP/issues/5771
	# see https://wiki.openthinclient.org/omd20191/knowledge-base/freerdp-performance-optimieren
	# see https://wiki.openthinclient.org/omd20221/knowledge-base/freerdp-performance-optimieren
	#/gfx:rfx /rfx -gfx-thin-client +gfx-progressive # rfx progressive
	#/gfx:avc420 /rfx +gfx-thin-client -gfx-progressive # rfx non-progressive
	#/gfx:avc444  # avc444
)

ARGS=()
for arg; do
	case "$arg" in
	/best)
		ARGS+=( "${OPTIONS_BEST[@]}" ) ;;
	/fast|/fastest|/worst)
		ARGS+=( "${OPTIONS_FASTEST[@]}" ) ;;
	*)
		ARGS+=( "$arg" ) ;;
	esac
	shift
done

exec /usr/bin/xfreerdp "${OPTIONS[@]}" "${ARGS[@]}"
